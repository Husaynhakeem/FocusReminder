<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppThemeUserFocused" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryUserFocused</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkUserFocused</item>
    </style>

    <style name="AppThemeUserNotFocused" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryUserNotFocused</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkUserNotFocused</item>
    </style>

</resources>
